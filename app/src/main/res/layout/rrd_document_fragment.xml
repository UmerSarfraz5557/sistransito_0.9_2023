<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_2"
    android:orientation="vertical"
    android:padding="@dimen/width_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/width_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_rrd_numero_auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/width_padding"
                android:gravity="right"
                android:text="@string/value_format"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/primary"
                android:layout_marginBottom="@dimen/width_padding_15"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primary"
                android:layout_marginBottom="@dimen/padding_top_edit" >

                <EditText
                    android:id="@+id/et_rrd_driver_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:hint="@string/driver_name"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/gray_5"
                    android:inputType="textCapCharacters"
                    android:paddingBottom="@dimen/width_padding_16" />

            </com.google.android.material.textfield.TextInputLayout>

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_rrd_documento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="@color/primary"
                app:ms_arrowSize="12dp"
                app:ms_floatingLabelColor="@color/primary"
                app:ms_floatingLabelText="@string/select_spinner_rrd"
                app:ms_alignLabels="true"
                app:ms_hintColor="@color/primary"
                app:ms_hint="@string/rrd_document"
                app:ms_multiline="true"
                app:ms_baseColor="@color/primary" />

                <LinearLayout
                    android:id="@+id/layout_hide_placa_uf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/primary"
                        android:layout_marginBottom="@dimen/padding_top_edit" >

                        <EditText
                            android:id="@+id/et_rrd_crlv_number"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:hint="@string/rrd_crlv_number"
                            android:backgroundTint="@color/primary"
                            android:textColor="@color/gray_5"
                            android:inputType="textCapCharacters"
                            android:paddingBottom="@dimen/width_padding_16" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/indicator_width" >

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/primary"
                                android:layout_marginBottom="@dimen/padding_top_edit" >

                                <EditText
                                    android:id="@+id/et_rrd_placa"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:hint="@string/rrd_plate"
                                    android:backgroundTint="@color/primary"
                                    android:textColor="@color/gray_5"
                                    android:inputType="textCapCharacters"
                                    android:paddingBottom="@dimen/width_padding_16" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/indicator_width" >

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/primary"
                                android:layout_marginBottom="@dimen/padding_top_edit" >

                                <EditText
                                    android:id="@+id/et_rrd_uf"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:hint="@string/rrd_state"
                                    android:backgroundTint="@color/primary"
                                    android:textColor="@color/gray_5"
                                    android:inputType="textCapCharacters"
                                    android:paddingBottom="@dimen/width_padding_16" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                    android:id="@+id/layout_hide_registro_validade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:focusable="true"
                        android:focusableInTouchMode="true" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/indicator_width" >

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/primary"
                                android:layout_marginBottom="@dimen/padding_top_edit" >

                                <EditText
                                    android:id="@+id/et_rrd_register_number"
                                    android:layout_width="320dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:hint="@string/rrd_register_number"
                                    android:maxLength="11"
                                    android:backgroundTint="@color/primary"
                                    android:textColor="@color/gray_5"
                                    android:inputType="number"
                                    android:paddingBottom="@dimen/width_padding_16" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/indicator_width" >

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColorHint="@color/primary"
                                android:layout_marginBottom="@dimen/padding_top_edit" >

                                <EditText
                                    android:id="@+id/et_rrd_uf_registro"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:maxLength="2"
                                    android:hint="@string/rrd_state"
                                    android:backgroundTint="@color/primary"
                                    android:textColor="@color/gray_5"
                                    android:inputType="textCapCharacters"
                                    android:paddingBottom="@dimen/width_padding_16" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rrd_validade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|center_horizontal" >

                <Button
                    android:id="@+id/btn_rrd_validade"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="120dp"
                    android:layout_height="42dp"
                    android:background="@drawable/btn_yellow_2"
                    android:padding="@dimen/width_padding"
                    android:text="@string/rrd_validity"
                    android:textColor="@color/white" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_municipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:errorEnabled="true"
                android:textColorHint="@color/primary"
                android:layout_marginBottom="@dimen/padding_top_edit" >

                <AutoCompleteTextView
                    android:id="@+id/actv_rrd_municipio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="3"
                    android:gravity="left|center_vertical"
                    android:inputType="textCapCharacters"
                    android:hint="@string/tca_state"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/gray_5"
                    android:paddingBottom="@dimen/width_padding_15"
                    android:imeOptions="actionDone"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textCursorDrawable="@null" >
                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_rrd_data_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/width_margin_8"
                android:baselineAligned="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal"
                android:paddingTop="@dimen/width_padding" >

                <Button
                    android:id="@+id/btn_rrd_data"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/indicator_width"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow_2"
                    android:padding="@dimen/width_padding"
                    android:text="@string/date_field"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_rrd_hora"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/indicator_width"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow_2"
                    android:padding="@dimen/width_padding"
                    android:text="@string/time_field"
                    android:textColor="@color/white"
                    android:layout_marginBottom="@dimen/padding_top_edit" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>